@using Dovecord.Client.Shared.DTO.Message
@using Dovecord.Client.Shared.DTO.Channel
@inject ISnackbar Snackbar

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Add" Class="mr-3 mb-n1"/>
            Create channel?
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudTextField @bind-Value="Channel" Label="Channel Name" ReadOnly="false"/>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Error" OnClick="CreateChannel">Create channel</MudButton>
    </DialogActions>
</MudDialog>
@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }
    [Parameter] public EventCallback<ChannelManipulationDto> CreateChannelCallback { get; set; }
    [Parameter] public string Channel { get; set; }
    
    private void Cancel()
    {
        MudDialog.Cancel();
    }

    private async Task CreateChannel()
    {
        var newChannel = new ChannelManipulationDto()
        {
            Name = Channel
        };
        
        await CreateChannelCallback.InvokeAsync(newChannel);
        Snackbar.Add("Channel created", Severity.Success);
        MudDialog.Close(DialogResult.Ok(Channel));
    }
}