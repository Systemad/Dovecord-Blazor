@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.AspNetCore.Components.WebAssembly.Authentication
@inject SignOutSessionStateManager SignOutManager
<AuthorizeView>
    <Authorized>
        <MudMenu Direction="Direction.Left" OffsetX="true" Dense="true" Class="mt-1 ml-4">
            <ActivatorContent>
                <MudAvatar Image="" />
            </ActivatorContent>
            <ChildContent>
                <ProfileCard Class="mt-n2" />
                <MudDivider Class="mb-2" />
                <MudListItem Text="Account" Icon="@Icons.Material.Outlined.Person" Href="/authentication/profile" />
                <MudListItem Text="Logout" Icon="@Icons.Material.Outlined.Login" OnClick="BeginSignOut" />
            </ChildContent>
        </MudMenu>
    </Authorized>
</AuthorizeView>
@code{
    private async Task BeginSignOut(MouseEventArgs args)
    {
        await SignOutManager.SetSignOutState();
        _navigationManager.NavigateTo("authentication/logout");
    }
}